{
  "name": "dino-bruce",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc && node ../../node_modules/bruce-sdk/sdk.js build",
    "start": "tsc && node ../../node_modules/bruce-sdk/sdk.js start",
    "dev": "npm-watch",
    "upload": "tsc && node ../../node_modules/bruce-sdk/sdk.js upload"
  },
  "watch": {
    "start": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,js",
      "quiet": true,
      "legacyWatch": false,
      "runOnChangeOnly": false
    }
  },
  "devDependencies": {
    "bruce-sdk": "*",
    "npm-watch": "^0.13.0",
    "typescript": "^5.7.2"
  }
}
