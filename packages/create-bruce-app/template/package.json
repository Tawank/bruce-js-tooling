{
  "name": "<app_name>",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc && npx bruce-sdk build",
    "start": "tsc && npx bruce-sdk start",
    "upload": "tsc && npx bruce-sdk upload",
    "dev": "npm-watch",
    "test": "vitest"
  },
  "watch": {
    "start": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,js",
      "quiet": true,
      "legacyWatch": false,
      "runOnChangeOnly": false
    }
  },
  "devDependencies": {
    "bruce-sdk": "^0.0.2",
    "npm-watch": "^0.13.0",
    "typescript": "^5.7.2",
    "vitest": "^3.0.5"
  },
  "dependencies": {
  }
}
